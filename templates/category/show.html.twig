{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto p-4 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-4 text-center">Détails de la Catégorie</h1>

        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">ID :</label>
            <p class="text-gray-800">{{ category.id }}</p>
        </div>

        <div class="mb-4">
            <label class="block text-gray-700 font-semibold">Nom :</label>
            <p class="text-gray-800">{{ category.name }}</p>
        </div>

        <div class="flex justify-center mt-6 space-x-4">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Modifier</a>
            <a href="{{ path('app_category_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
